@model MainWebsite.Models.MvPlacesModel
<div class="col-sm-6 col-md-4">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">@Model.CityName @Model.CountryName</h3>
  </div>
  <div class="panel-body">
      @MvcHtmlString.Create(string.Format("{0}&#176; C/{1}&#176; F", Model.TempuratureCelcius, Model.TempuratureFahrenheit))
  </div>

      <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item">Wind: @Model.WindSpeed&nbsp;@Model.WindDegree&#176;</li>
    <li class="list-group-item">Sky: @Model.WeatherMain</li>
    <li class="list-group-item">Pressure: @Model.Pressure</li>
    <li class="list-group-item">Sunrise: @Model.Sunrise</li>
    <li class="list-group-item">Sunset: @Model.Sunset</li>
  </ul>
</div>
</div>